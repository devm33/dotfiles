# Grunt / Gulp
grunt_and_gulp() {
    if [ -f 'gulpfile.js' -o -f 'Gulpfile.js' ]; then
        gulp $*;
    elif [ -f 'gruntfile.js' -o -f 'Gruntfile.js' ]; then
        grunt $*;
    else
        echo 'no grunt or gulp file found';
    fi
}
alias grlp='grunt_and_gulp'
alias gw='grunt_and_gulp watch'
alias b='grunt_and_gulp'

