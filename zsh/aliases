# Show contents of directory after cd-ing into it
chpwd() {
  ls
  if [[ "$PWD" == *"electron/src"* ]]; then
    return
  fi
  if [[ "$PWD" == *"chromium/src"* ]]; then
    return
  fi
  if [ -d .git ]; then
      git diff --quiet || echo "--\ngit changes pending"
  fi
}

